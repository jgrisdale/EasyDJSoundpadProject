<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" >

        <ImageView
            android:id="@+id/logoBottom"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoTop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logob" />

        <ImageView
            android:id="@+id/logoTop"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <Button
        android:id="@+id/freemodeButton"
        style="@style/btnStyleBeige"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Free-Play Mode" />

    <Button
        android:id="@+id/recordButton"
        style="@style/btnStyleBeige"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Record New" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.46" >

        <Button
            android:id="@+id/editButton"
            style="@style/btnStyleBeige"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/playButton"
            android:layout_alignRight="@+id/playButton"
            android:layout_centerVertical="true"
            android:text="Edit" />

        <Button
            android:id="@+id/deleteButton"
            style="@style/btnStyleBeige"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editButton"
            android:layout_alignRight="@+id/playButton"
            android:layout_below="@+id/editButton"
            android:text="Delete" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/playButton"
            android:layout_above="@+id/searchOptions"
            android:textColor="#FFFFFF"
            android:text="Select Recording"
            />
        <Spinner
            android:id="@+id/searchOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/prompt"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/editButton"
            android:background="#FFFFFF"
            />

        <Button
            android:id="@+id/playButton"
            style="@style/btnStyleBeige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editButton"
            android:layout_centerHorizontal="true"
            android:text="Play Recording" />

    </RelativeLayout>

    <Button
        android:id="@+id/quitButton"
        style="@style/btnStyleBeige"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quit" />

</LinearLayout>
